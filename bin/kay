import argparse
import logging
import sys

import kay
import kay.messenger
import kay.messengers

KAY_USAGE_MSG = \
"""%(prog)s [-g] <messenger> [<args>] | --help | --version"""

KAY_DESC_MSG = \
"""Assign Sir Kay to transfer data between two data storages.

Transfers are achieved using specific messengers. The most common messengers
are:

    redis2es         Transfer Redis data to ES index

optional arguments:
  -h, --help            show this help message and exit
  -v, --version         show version
  -g, --debug           set debug mode on
"""

KAY_EPILOG_MSG = \
"""Run '%(prog)s <backend> --help' to get information about a specific messenger."""

KAY_VERSION_MSG = \
"""%(prog)s """  + kay.messengers.__version__


# Logging formats
KAY_LOG_FORMAT = "[%(asctime)s] - %(message)s"
KAY_DEBUG_LOG_FORMAT = "[%(asctime)s - %(name)s - %(levelname)s] - %(message)s"


def main():
    args = parse_args()

    _, KAY_CMDS = kay.messenger.find_messengers(kay.messengers)

    if args.messenger not in KAY_CMDS:
        raise RuntimeError("Unknown messenger %s" % args.messenger)

    configure_logging(args.debug)

    logging.info("Sir Kay is starting to transfer the data.")

    klass = KAY_CMDS[args.messenger]
    cmd = klass(*args.messenger_args)
    cmd.run()

    logging.info("Sir Kay completed the transfer.")


def parse_args():
    """Parse command line arguments"""

    parser = argparse.ArgumentParser(usage=KAY_USAGE_MSG,
                                     description=KAY_DESC_MSG,
                                     epilog=KAY_EPILOG_MSG,
                                     formatter_class=argparse.RawDescriptionHelpFormatter,
                                     add_help=False)

    parser.add_argument('-h', '--help', action='help',
                        help=argparse.SUPPRESS)
    parser.add_argument('-v', '--version', action='version',
                        version=KAY_VERSION_MSG,
                        help=argparse.SUPPRESS)
    parser.add_argument('-g', '--debug', dest='debug',
                        action='store_true',
                        help=argparse.SUPPRESS)

    parser.add_argument('messenger', help=argparse.SUPPRESS)
    parser.add_argument('messenger_args', nargs=argparse.REMAINDER,
                        help=argparse.SUPPRESS)

    if len(sys.argv) == 1:
        parser.print_help()
        sys.exit(1)

    return parser.parse_args()


def configure_logging(debug=False):
    """Configure Kay logging

    The function configures the log messages produced by Kay.
    By default, log messages are sent to stderr. Set the parameter
    `debug` to activate the debug mode.

    :param debug: set the debug mode
    """
    if not debug:
        logging.basicConfig(level=logging.INFO,
                            format=KAY_LOG_FORMAT)
        logging.getLogger('requests').setLevel(logging.WARNING)
        logging.getLogger('urrlib3').setLevel(logging.WARNING)
    else:
        logging.basicConfig(level=logging.DEBUG,
                            format=KAY_DEBUG_LOG_FORMAT)


if __name__ == '__main__':
    try:
        main()
    except KeyboardInterrupt:
        s = "\n\nReceived Ctrl-C or other break signal. Exiting.\n"
        sys.stderr.write(s)
        sys.exit(0)
